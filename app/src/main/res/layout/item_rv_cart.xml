<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="cartModel"
            type="com.example.fashionapp.model.CartModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="104dp"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/common_size_24dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image"
                android:layout_width="104dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Pullover"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/image"
                android:layout_marginStart="11dp"
                android:layout_marginTop="15dp"
                />
            <FrameLayout
                android:id="@+id/fl_adjust"
                android:layout_width="109dp"
                android:layout_height="36dp"
                app:layout_constraintStart_toEndOf="@id/image"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="11dp"
                >
                <ImageView
                    android:id="@+id/btn_subtract"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_subtract"
                    android:background="@drawable/bg_round"
                    android:elevation="5dp"
                    android:layout_gravity="center|start"/>

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@{cartModel.quantity.toString()}"
                    android:textSize="@dimen/text_size_14sp"/>
                
                <ImageView
                    android:id="@+id/btn_add"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_add"
                    android:background="@drawable/bg_round"
                    android:elevation="5dp"
                    android:layout_gravity="center|end"
                    />
            </FrameLayout>

            <ImageView
                android:layout_width="@dimen/common_size_12dp"
                android:layout_height="@dimen/common_size_24dp"
                android:src="@drawable/ic_vertical_menu"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="11dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="51$"
                android:textStyle="bold"
                android:text='@{cartModel.price+"$"}'
                android:layout_marginEnd="11dp"
                app:layout_constraintTop_toTopOf="@id/fl_adjust"
                app:layout_constraintBottom_toBottomOf="@id/fl_adjust"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>