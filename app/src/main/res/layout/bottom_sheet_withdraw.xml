<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radius_34dp_f9f9f9"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_6dp"
            android:layout_marginHorizontal="@dimen/common_size_150dp"
            android:background="@drawable/bg_radius_29_9b9b9b"
            android:layout_marginTop="@dimen/commin_size_15dp"/>

        <ImageView
            android:layout_marginTop="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/ic_paypal_logo"
            android:layout_marginHorizontal="@dimen/commin_size_16dp"/>
        <EditText
            android:id="@+id/et_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/commin_size_16dp"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:maxLines="1"
            android:background="@drawable/bg_radius_4dp_ffffff"
            android:hint="Amount money"
            android:paddingVertical="@dimen/commin_size_22dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_money"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            tools:text="Full money: 20$"
            android:textColor="@color/grey_9B9B9B"
            android:layout_marginStart="@dimen/commin_size_16dp"
            android:layout_marginTop="@dimen/common_size_8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            android:layout_marginTop="@dimen/margin_16"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textSize="@dimen/text_size_14sp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:background="@drawable/bg_radius_4dp_ffffff"
                android:layout_marginHorizontal="@dimen/margin_16"/>
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/et_paypal_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/commin_size_16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_radius_4dp_ffffff"
            android:hint="Your Account Paypal"
            android:paddingVertical="@dimen/commin_size_22dp"
            android:paddingStart="20dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_save"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Save account paypal"
            android:textColor="@color/grey_9B9B9B"
            android:layout_marginStart="@dimen/commin_size_16dp"
            android:layout_marginTop="@dimen/common_size_8dp"/>

        <TextView
            android:id="@+id/bt_withdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Withdraw"
            android:background="@drawable/bg_btn_primary_enable"
            android:paddingVertical="@dimen/common_size_14dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp"
            android:layout_marginHorizontal="@dimen/commin_size_16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/commin_size_16dp"/>
    </LinearLayout>

</layout>