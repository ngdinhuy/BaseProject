<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="product"
            type="com.example.fashionapp.model.Product" />

        <variable
            name="viewmodel"
            type="com.example.fashionapp.ui.fashion.detail_product.DetailProductViewmodel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="match_parent"
            android:layout_height="364dp"
            app:layout_constraintTop_toTopOf="parent"
            app:loadImage="@{product.image[0]}"
            android:padding="10dp"
            />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/common_size_24dp"
            android:layout_height="@dimen/common_size_24dp"
            android:src="@drawable/ic_black_arrow_back"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="@id/fl_like"
            app:layout_constraintBottom_toBottomOf="@id/fl_like"
            app:layout_constraintStart_toStartOf="parent"
            android:translationZ="90dp"
            android:onClick="@{()->viewmodel.backEvent()}"
            />
        <FrameLayout
            android:id="@+id/fl_like"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/bg_round"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="55dp"
            android:onClick="@{()->viewmodel.likeProduct()}"
            android:layout_marginEnd="30dp"
            android:translationZ="90dp"
            >
            <ImageView
                android:id="@+id/img_like"
                android:layout_gravity="center"
                android:layout_width="@dimen/commin_size_22dp"
                android:layout_height="@dimen/commin_size_22dp"
                android:background="@drawable/bg_round"
                android:src="@drawable/ic_shape_heart"/>
        </FrameLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ll_add_to_cart"
            android:fillViewport="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@drawable/bg_scrollview_detail_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/tv_Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{product.price.toString()+"$"}'
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="48.00$"
                        android:layout_marginTop="50dp"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="30dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        tools:text="Purple Hoodie"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/tv_Price"
                        app:layout_constraintTop_toTopOf="@id/tv_Price"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="30dp"
                        android:text="@{product.displayName()}"
                        />
                    <RatingBar
                        android:id="@+id/rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:progressTint="@color/color_star_ratingbar"
                        tools:rating="4"
                        app:layout_constraintTop_toBottomOf="@id/tv_Price"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="30dp"
                        android:rating="@{product.displayRatingFloat()}"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/tv_rating_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/rating_bar"
                        app:layout_constraintTop_toTopOf="@id/rating_bar"
                        app:layout_constraintBottom_toBottomOf="@id/rating_bar"
                        android:layout_marginStart="9dp"
                        tools:text="(20)"
                        android:text='@{"("+product.displayRatingCount()+")"}'
                        android:textSize="@dimen/text_size_10sp"
                        android:textColor="#9B9B9B"
                        />

                    <LinearLayout
                        android:id="@+id/ll_adjust"
                        android:layout_width="82dp"
                        android:layout_height="25dp"
                        app:layout_constraintTop_toBottomOf="@id/rating_bar"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/bg_adjust_num_item"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        >

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:onClick="@{()->viewmodel.addAmount()}"
                            android:src="@drawable/ic_add" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:textSize="18sp"
                            tools:text="12"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="@{viewmodel.amount}"
                            />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:padding="5dp"
                            android:src="@drawable/ic_subtract"
                            android:onClick="@{()->viewmodel.subtractAmount()}"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_title_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DESCRIPTION"
                        app:layout_constraintTop_toBottomOf="@id/ll_adjust"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="36dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{product.description}"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_description"
                        tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book...detail"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="20dp"
                        android:layout_marginHorizontal="30dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/ll_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:onClick="@{()->viewmodel.addToCart(product)}"
            android:background="@drawable/bg_btn_primary_enable">
            <ImageView
                android:layout_width="@dimen/common_size_24dp"
                android:layout_height="@dimen/common_size_24dp"
                android:src="@drawable/ic_cart_icon_detail"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ADD TO CART"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>