<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="orderItem"
            type="com.example.fashionapp.model.OrderItemDetail" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cl_item"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:background="@color/white"
        app:cardCornerRadius="8dp"
        app:strokeWidth="0dp"
        app:strokeColor="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:background="@drawable/bg_item_shop_fragment"
            android:elevation="5dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="104dp"
                android:layout_height="104dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loadImage="@{orderItem.product.image}" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="11dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/image"
                app:layout_constraintTop_toTopOf="@id/image">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{orderItem.product.displayName()}"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:text="Blouse" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_size_4dp"
                    android:text='@{orderItem.product.user.name}'
                    android:textColor="@color/grey_9B9B9B"
                    android:textSize="11sp"
                    tools:text="Mango" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="26dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Units: "
                            android:textColor="@color/grey_9B9B9B"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{orderItem.quantity.toString()}"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            tools:text="1" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/commin_size_16dp"
                        android:text="@{orderItem.price.toString()}"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        tools:text="46$" />
                </FrameLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>